{
  "manifest_version": 3,
  "name": "Switch to Invidious",
  "version": "1.0.0",
  "description": "Open the current YouTube video on an Invidious instance.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["tabs", "activeTab"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://youtu.be/*"
  ]
}
